<h2>Update a movie</h2>

<form action="/movies/{{myMovie._id}}/update" method="post">

    <input type="text" name="title" placeholder="Title: " value="{{myMovie.title}}" />
  <input type="text" name="genre" placeholder="Genre: " value="{{myMovie.genre}}"/>
  <input type="text" name="plot" placeholder="Plot: " value="{{myMovie.plot}}"/>

  <select name="cast" id="cast"<!--multiple-->>
    {{#each oneCelebrity}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>

	<button>Update a movie</button>

</form>